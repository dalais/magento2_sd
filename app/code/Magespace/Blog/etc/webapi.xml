<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/blog/post" method="GET">
        <service class="Magespace\Blog\Api\PostManagmentInterface" method="getAllPost"/>
        <resources>
            <resource ref="Magespace_Blog::blog" />
        </resources>
    </route>
    <route url="/V1/blog/post/view/:post_id" method="GET">
        <service class="Magespace\Blog\Api\PostManagmentInterface" method="getPostView"/>
        <resources>
            <resource ref="Magespace_Blog::blog" />
        </resources>
    </route>
    <route url="/V1/blog/post/comment/add/:post_id" method="POST">
        <service class="Magespace\Blog\Api\PostManagmentInterface" method="addCommentInPost"/>
        <resources>
            <resource ref="Magespace_Blog::blog" />
        </resources>
    </route>
    <route url="/V1/blog/comment" method="GET">
        <service class="Magespace\Blog\Api\PostManagmentInterface" method="getAllComment"/>
        <resources>
            <resource ref="Magespace_Blog::blog" />
        </resources>
    </route>
</routes>
